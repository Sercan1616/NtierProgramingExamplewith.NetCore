@model List<WorkListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-2">
        <div class="text-end">
            <a asp-action="Create" asp-controller="Home" class="btn btn-primary mt-1 mb-2">Yeni İş Ekle</a>
        </div>
        <table class="table table-hovered table-bordered table-sm">
            <thead>
            <th>İş</th>
            <th>Durumu</th>
            </thead>
            <tbody>                
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Model[i].Defination
                        </td>
                        <td>@(Model[i].IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@Model[i].Id" class="btn btn-warning">Güncelle</a>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@Model[i].Id" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
    </div>
</body>
</html>