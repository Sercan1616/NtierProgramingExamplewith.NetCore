@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form asp-action="Update" asp-controller="Home" method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="mb-3">
            <label>İşin Tanımı:</label>
            <input class="form-control" asp-for="@Model.Defination" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="@Model.IsCompleted">
            <label class="form-check-label" for="IsComleted">
                Tamamlandı mı ?
            </label>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</body>
</html>